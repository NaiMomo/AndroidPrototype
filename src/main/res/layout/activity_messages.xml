<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A21F3FF"
    tools:context=".ui.login.SearchResultActivity">

    <TextView
        android:id="@+id/tv_searchResult"
        android:layout_width="355dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/message_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profPic1"
        android:layout_width="104dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchResult"
        app:srcCompat="@drawable/ic_account" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="57dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Trump"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profPic1"
        app:layout_constraintTop_toBottomOf="@+id/tv_searchResult"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/profPic2"
        android:layout_width="104dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profPic1"
        app:srcCompat="@drawable/ic_account" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="57dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Obama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profPic2"
        app:layout_constraintTop_toBottomOf="@+id/profPic1" />

    <Button
        android:id="@+id/b_repondre2"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:backgroundTint="#00FFFFFF"
        android:text="RÉPONDRE"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/name3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/profPic2"
        app:layout_constraintTop_toBottomOf="@+id/name2"
        app:layout_constraintVertical_bias="0.553"
        app:rippleColor="#03A9F4"
        app:strokeColor="#03A9F4" />

    <TextView
        android:id="@+id/message2"
        android:layout_width="276dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Trump tu parle en francais ?"
        app:layout_constraintStart_toEndOf="@+id/profPic2"
        app:layout_constraintTop_toBottomOf="@+id/name2" />

    <Button
        android:id="@+id/b_repondre3"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:backgroundTint="#00FFFFFF"
        android:text="RÉPONDRE"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message3"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#03A9F4"
        app:strokeColor="#03A9F4" />

    <TextView
        android:id="@+id/message3"
        android:layout_width="161dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:text="hmmm ;)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profPic3"
        app:layout_constraintTop_toBottomOf="@+id/name3"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/b_repondre1"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:backgroundTint="#00FFFFFF"
        android:text="RÉPONDRE"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toTopOf="@+id/name2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/profPic1"
        app:layout_constraintTop_toBottomOf="@+id/message1"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#03A9F4"
        app:strokeColor="#03A9F4" />

    <TextView
        android:id="@+id/message1"
        android:layout_width="222dp"
        android:layout_height="19dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Il faut choisir le nom d'équipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profPic1"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        app:layout_constraintVertical_bias="0.005" />


    <ImageView
        android:id="@+id/profPic3"
        android:layout_width="104dp"
        android:layout_height="95dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profPic2"
        app:layout_constraintVertical_bias="0.003"
        app:srcCompat="@drawable/ic_account" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="178dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:text="Kim Jong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profPic2"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/b_ic_friends"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="32dp"
        android:background="#FFFFFF"
        android:backgroundTint="#00000000"
        android:drawableTop="@drawable/ic_friends"
        android:text="Ami(e)s"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b_ic_search"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="32dp"
        android:background="#FFFFFF"
        android:backgroundTint="#00000000"
        android:drawableTop="@drawable/ic_search"
        android:text="Recherche"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b_ic_message"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="276dp"
        android:layout_marginBottom="32dp"
        android:background="#FFFFFF"
        android:backgroundTint="#00000000"
        android:drawableTop="@drawable/ic_message"
        android:text="Message"
        android:textColor="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b_repondre1" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="309dp" />


</androidx.constraintlayout.widget.ConstraintLayout>